<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("App Productos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Categorías", "Index", "Categorias")
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Tipos de empaque", "Index", "TipoEmpaques");
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Productos", "Index", "Productoes")
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Proveedores", "Index", "Proveedores");
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="jumbotron">
            <h1 class="display-3">Sistema de control de inventarios</h1>
            <hr class="my-4">
            <p>Bienvenido</p>
            <p class="lead">
            </p>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>