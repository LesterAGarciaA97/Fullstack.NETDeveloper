@model IEnumerable<MVCproductos.Models.Producto>

@{
    ViewBag.Title = "CategoriaProductos";
}

<h2>Categoría de los productos</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoEmpaque.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoEmpaque.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imagen)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CodigoProducto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CodigoProducto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CodigoProducto })
        </td>
    </tr>
}

</table>
