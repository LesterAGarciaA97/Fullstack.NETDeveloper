<Window x:Class="SegundaVentana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSaludoMVC"
        mc:Ignorable="d"
        Title="Segunda Ventana" Height="300" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Recursos/Imagen de fondo.jpg"/>
        </Grid.Background>
        <Border Margin="10" Background="GhostWhite" BorderBrush="DodgerBlue" BorderThickness="40,10,40,20" CornerRadius="20">
            <StackPanel>
                <Button Content="Button 1" Margin="10"/>
                <Button Content="Button 2" Margin="10"/>
                <Button Content="Button 3" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
